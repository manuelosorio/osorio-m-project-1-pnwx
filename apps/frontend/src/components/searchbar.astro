  <input type="text" placeholder="Search..." />
  <button>Search</button>
</div>

<script>
  function search() {
    if (searchQuery) {
      // Handle your search logic here.
      // Maybe redirect to a search results page or fetch some data.
      console.log(`Searching for: ${searchQuery}`);
    }
  }
</script>

<style>
  .search-bar {
    display: flex;
    gap: 0.5rem;
  }
