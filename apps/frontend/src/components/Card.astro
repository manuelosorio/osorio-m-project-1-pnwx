---
import Image from 'astro:assets';
interface Props {
  title: string;
  body: string;
  icon?: {
    path: string;
    width?: number;
    height?: number;
    aspectRatio?: number;
  };
  className?: string;
}
const { title, body, icon, className } = Astro.props;
---

<div class=`card ${className}`>
  <div class="card__header">
    <div class="card__header__title">{title}</div>
    <div class="card__header__icon"></div>
  </div>
  <div class="card__body">{body}</div>
</div>
