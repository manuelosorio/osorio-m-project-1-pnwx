#
# Build the docker image with `npx nx docker-build backend-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t backend-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system backend-api && \
          adduser --system -G backend-api backend-api

COPY dist/apps/backend-api backend-api
RUN chown -R backend-api:backend-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix backend-api --omit=dev -f install

CMD [ "node", "backend-api" ]
